---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

// Clip path comes from https://codepen.io/BillyHill/pen/xBvKpE
---

<Layout title="Montagne">
  <main>
    <div
      class="grid grid-cols-1 grid-rows-1 [&>*]:row-start-1 [&>*]:col-start-1 h-screen overflow-hidden"
    >
      <img
        src="/approche-glacier.jpeg"
        class="object-cover object-center self-center h-full w-full bg-white"
      />

      <div
        class="bg-gradient-to-t from-slate-900/20 via-slate-900/10 via-40% h-full w-full"
      >
      </div>

      <div
        class="self-center max-w-4xl px-4 md:px-2 justify-self-center w-full"
      >
        <h2 class="font-semibold text-slate-100 text-5xl drop-shadow-xl mb-4">
          Mes aventures en montagne
        </h2>

        <p
          class="text-slate-100 text-lg max-w-xl font-medium drop-shadow-xl mb-8"
        >
          Randonnée. Escalade. Alpinisme. Mon carnet de voyage en montagne.
        </p>

        <a
          class="text-white inline-flex font-semibold items-center gap-x-1 px-4 py-2 border-2 border-white rounded transition-colors hover:text-sky-300/90 hover:border-sky-300/90 cursor-pointer"
        >
          Découvrir

          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="size-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
          </svg>
        </a>
      </div>

      <!-- style="clip-path: polygon(0% 100%, 100% 100%, 100% 100%, 83% 100%, 80% 99%, 78% 100%, 75% 97%, 69% 99%, 62% 100%, 60% 100%, 53% 95%, 51% 95%, 49% 93%, 39% 100%, 35% 97%, 32% 96%, 28% 98%, 19.6% 100%, 0% 100%); -->
      <div
        style="clip-path: polygon(0% 100%, 100% 100%, 100% 100%, 100% 99%, 95.27% 96.36%, 91.61% 98.75%, 87.38% 93.57%, 77.92% 97.86%, 70.74% 99.41%, 62.58% 97.49%, 52.68% 89.29%, 49.53% 89.29%, 46.37% 85%, 29.9% 97.13%, 24.29% 93.57%, 19.56% 91.43%, 13.25% 95.71%, 0% 99%);"
        class="bg-white"
      >
      </div>
    </div>
  </main>
</Layout>
